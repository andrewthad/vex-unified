library internal
  exposed-modules:
    Internal 
    PrimArray
    Data.Text.Short.Unlifted
  default-language: Haskell2010
  ghc-options: -O2 -Wall
  build-depends:
    , base >=4.12.0.0 && <5
    , bytestring
    , text-short
    , ghc-prim
  visibility: public
  hs-source-dirs: src-internal

library indef
  exposed-modules:
    Vector
    Core
    -- Vex.Sized.Vector
    -- Vex.Sized.Slice
  signatures:
    Array
  build-depends:
    , base >=4.12.0.0 && <5
    , vext:internal
    , natural-arithmetic
    , unlifted
  hs-source-dirs: src
  default-language: Haskell2010
  ghc-options: -O2 -Wall

