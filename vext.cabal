library imp
  exposed-modules:
    Word8
    ByteArray
    Lifted
    Unlifted
  build-depends:
    , base >=4.12.0.0 && <5
    , vext:internal
    , primitive >=0.7
  hs-source-dirs: src-imp
  default-language: Haskell2010
  ghc-options: -O2 -Wall

library inst
  default-language: Haskell2010
  reexported-modules:
    , Vector.Std.Lifted
    , Vector.Std.Word8
    , Vector.Std.Unlifted
  build-depends:
    , vext:imp
    , vext:indef
    , primitive >=0.7
    , vext:internal
  mixins:
    vext:indef (Vector as Vector.Std.Word8) requires (Array as Word8),
    vext:indef (Vector as Vector.Std.Lifted) requires (Array as Lifted),
    vext:indef (Vector as Vector.Std.Unlifted) requires (Array as Unlifted),

library pair-indef
  exposed-modules:
    Array
  signatures:
    ArrayA
    ArrayB
  build-depends:
    , base >=4.12.0.0 && <5
    , vext:internal
  hs-source-dirs: src-pair-indef
  default-language: Haskell2010
  ghc-options: -O2 -Wall

library pair-array-inst
  default-language: Haskell2010
  reexported-modules:
    , Array.Pair.Lifted.Word8
  build-depends:
    , vext:inst
    , vext:pair-indef
  mixins:
    vext:pair-indef (Array as Array.Pair.Lifted.Word8) requires
      (ArrayA as Lifted, ArrayB as Word8),

library pair-inst
  default-language: Haskell2010
  reexported-modules:
    , Vector.Pair.Word8.Lifted
  build-depends:
    , vext:pair-array-inst
    , vext:indef
  mixins:
    vext:indef (Vector as Vector.Pair.Word8.Lifted) requires
      (Array as Array.Pair.Lifted.Word8),

library
  default-language: Haskell2010
  reexported-modules:
    , Vector.Std.Lifted
    , Vector.Std.Word8
    , Vector.Std.Unlifted
    , Vector.Pair.Word8.Lifted
    , Data.Text.Short.Unlifted
  build-depends:
    , vext:inst
    , vext:pair-inst
    , primitive >=0.7
    , vext:internal
